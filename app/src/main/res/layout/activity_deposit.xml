<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gbp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40dp"
    android:background="@color/white"
    tools:context=".Deposit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add money"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="25sp"
         />

    <TextView
        android:id="@+id/txtCurrentAccountBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="A/C bal:  ₹0"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textAlignment="center"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="26dp"
            android:orientation="vertical"
            android:background="@drawable/ic_baseline_currency_rupee_24"
            >

            <com.jpardogo.android.googleprogressbar.library.GoogleProgressBar
                android:id="@+id/dipositPageProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                gbp:type="chrome_floating_circles"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="#2196F3"
                >

                <TextView
                    android:id="@+id/txtDipositAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Amount"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/txtEnterAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:inputType="number"
                    android:hint="₹1000"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:layout_below="@id/txtDipositAmount"
                    />
                <LinearLayout
                    android:id="@+id/recomend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_below="@id/txtEnterAmount"
                    >
                    <TextView
                        android:id="@+id/btn500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500"
                        android:padding="10dp"
                        android:textSize="20sp"
                        android:background="@drawable/recomand_amount_background"
                        android:textColor="@color/purple_700"
                        />
                    <TextView
                        android:id="@+id/btn1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:layout_margin="2.5dp"
                        android:padding="10dp"
                        android:textSize="20sp"
                        android:background="@drawable/recomand_amount_background"
                        android:textColor="@color/purple_700"
                        />
                    <TextView
                        android:id="@+id/btn2000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000"
                        android:layout_margin="2.5dp"
                        android:padding="10dp"
                        android:textSize="20sp"
                        android:background="@drawable/recomand_amount_background"
                        android:textColor="@color/purple_700"
                        />
                    <TextView
                        android:id="@+id/btn5000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5000"
                        android:padding="10dp"
                        android:textSize="20sp"
                        android:background="@drawable/recomand_amount_background"
                        android:textColor="@color/purple_700"
                        />

                </LinearLayout>
            </LinearLayout>

                <Button
                    android:id="@+id/btnProceed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="Proceed"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:background="@drawable/btn_background"
                    android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>